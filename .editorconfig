# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[**.{css, scss, js, json}]
charset = utf-8
trim_trailing_whitespace = true

[**.{css, scss, js, php}]
indent_style = tab
indent_size = 1

[package.json]
indent_style = tab
indent_size = 1
